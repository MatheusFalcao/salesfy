<%= form_for @produto, :html => { :class => 'form-horizontal form-model' } do |f| %>
  <div class="form-group">
    <%= f.label :nome, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :nome, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :desc, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_area :desc, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :preco, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :preco, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :estoque, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.number_field :estoque, :class => 'text-field form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class='col-md-offset-2 col-md-10'>
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                  produtos_path, :class => 'btn btn-default' %>
    </div>
  </div>
<% end %>
